<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="visualization.goom"
  version="2.1.0"
  name="Goom"
  provider-name="Team Kodi">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.general" version="1.0.3"/>
<import addon="kodi.binary.global.gui" version="5.12.0"/>
<import addon="kodi.binary.instance.visualization" version="2.0.1"/></requires>
  <extension
    point="xbmc.player.musicviz"
    library_linux="visualization.goom.so.2.1.0"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Goom 2k4 Visualization</summary>
    <description lang="en_GB">
    Build for OSMC Vero4k (and maybe other Arm systems)
    The Goom 2k4 visualization supports effects like Tentacles, Flash, Stars, Fireworks, Waves, Blurs and Glows and includes a large number of trippy hypnotic effects that dance, swirl and pop with the music</description>
    <platform>linux</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/xbmc/visualization.goom</source>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
      <screenshot>resources/screenshot-01.png</screenshot>
      <screenshot>resources/screenshot-02.png</screenshot>
      <screenshot>resources/screenshot-03.png</screenshot>
      <screenshot>resources/screenshot-04.png</screenshot>
      <screenshot>resources/screenshot-05.png</screenshot>
      <screenshot>resources/screenshot-06.png</screenshot>
    </assets>
  </extension>
</addon>
